smbclient(){
printf 'Enter username ---> '
read usrname
printf 'Enter target IP Address ---> '
read targip
gnome-terminal --command="bash -c 'smbclient -U '$usrname' -L //$targip;$SHELL'"
printf "${GREEN}
-------------------------------------
[โ] 	     ๐FINISHED๐	 [โ] |
-------------------------------------"
}
gobuster(){
printf "Target IP ---> "
read targip
printf "Path to wordlist ---> "
read wordlist
gnome-terminal --command="bash -c 'gobuster dir -v -w $wordlist -u $targip;$SHELL'"
printf "${GREEN}
-------------------------------------
[โ] FINISHED SCANNING		 [โ] |
-------------------------------------"
}
deauth(){
printf "Enter target BSSID ---> "
read bssid
printf "Enter channel of AP ---> "
read channel
printf "Name of your wireless interface ---> "
read wlan
gnome-terminal --command="bash -c 'airodump-ng $wlan --bssid $bssid --channel $channel ;$SHELL'"
gnome-terminal --command="bash -c 'aireplay-ng -0 0 -a $bssid $wlan;$SHELL'"
}
